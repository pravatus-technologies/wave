{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": "./",
    "strict": true,
    "paths": {
      "@components/*": ["components/*"],
      "@containers/*": ["containers/*"],
      "@constants": ["constants/index"],
      "@constants/*": ["constants/*"],
      "@context": ["context"],
      "@context/*": ["context/*"],
      "@hooks/*": ["hooks/*"],
      "@utils/*": ["utils/*"],
      "@navigation/*": ["navigation/*"],
      "@services/*": ["services/*"],
      "@env": ["node_modules/react-native-dotenv"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "env.d.ts"]
}
